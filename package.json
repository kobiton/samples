{
  "name": "@kobiton/tests",
  "private": true,
  "version": "1.0.0",
  "author": "Kobiton Inc.",
  "description": "Automation test suite for Kobiton",
  "scripts": {
    "test": "mocha --reporter mochawesome  --timeout 900000 --compilers js:babel-register 'src/**/*.js'",
    "test1": "DESIRED_CAPS=cap1 npm run test",
    "test2": "DESIRED_CAPS=cap2 npm run test",
    "test-sequence": "npm run test1 && npm run test2",
    "test-parallel": "node 'src/run-parallel.js' test1 test2",
    "test-capabilities" : "mocha --reporter mochawesome  --timeout 900000 --compilers js:babel-register 'src/scenarios/verify-capabilities.js'"
  },
  "devDependencies": {
    "@kobiton/core-build": "0.0.11",
    "@kobiton/core-util": "~0.0.5"
  },
  "dependencies": {
    "babel-polyfill": "^6.5.0",
    "bluebird": "^3.0.6",
    "chai": "^2.2.0",
    "colors": "^1.0.3",
    "wd": "^0.3.11",
    "mocha": "^2.4.4",
    "mochawesome": "^1.3.1"
  }
}
