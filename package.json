{
  "name": "@kobiton/tests",
  "private": true,
  "version": "1.0.0",
  "author": "Kobiton Inc.",
  "description": "Automation test suite for Kobiton",
  "scripts": {
    "mocha": "mocha --timeout 9000000 --compilers js:babel-register",
    "test-all": "npm run mocha -- 'src/**/*.js'",
    "test-capabilities": "npm run mocha -- src/capabilities/test.js",
    "test-device-one": "npm run mocha -- src/durations/test-first-device.js",
    "test-device-two": "npm run mocha -- src/durations/test-second-device.js",
    "test-all-devices": "npm run mocha -- src/durations/test-all-devices.js",
    "test-sequence-one-device": "npm run test-device-one && npm run test-device-one",
    "test-sequence-two-devices": "npm run test-device-one && npm run test-device-two",
    "test-sequences": "npm run test-sequence-one-device && npm run test-sequence-two-devices",
    "test-parallel": "node 'src/helpers/run-parallel.js' test-device-one test-device-two"
  },
  "devDependencies": {
    "@kobiton/core-build": "^1.0.0",
    "@kobiton/core-util": "~0.0.5",
    "babel-register": "^6.6.5",
    "gulp": "^3.9.1",
    "gulp-mocha": "^2.2.0",
    "mochawesome": "^1.3.2",
    "request": "^2.69.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.5.0",
    "bluebird": "^3.0.6",
    "chai": "^3.5.0",
    "colors": "^1.0.3",
    "wd": "^0.3.11",
    "mocha": "^2.4.4"
  }
}
